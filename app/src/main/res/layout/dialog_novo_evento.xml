<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etTitulo"
        android:hint="Título"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etDesc"
        android:hint="Descrição"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvData"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Data" android:paddingTop="12dp" android:textStyle="bold"/>

    <Button
        android:id="@+id/btnPickDate" android:text="Escolher data/hora"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvChosenDate"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="-" android:paddingTop="6dp"/>

    <TextView
        android:id="@+id/tvLocal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Local" android:paddingTop="12dp" android:textStyle="bold"/>

    <Button
        android:id="@+id/btnPickLocal" android:text="Escolher no mapa"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvChosenLocal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="-" android:paddingTop="6dp"/>
</LinearLayout>
